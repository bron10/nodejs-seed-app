{
  "name": "api-app",
  "version": "0.0.1",
  "description": "Seed structure to develop nodeJS app in express",
  "main": "app.js",
  "author": "bron",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev-pm2",
    "start-prod": "export NODE_ENV=production;npm run prod-pm2",
    "start-stage": "export NODE_ENV=staging;npm run dev-pm2",
    "dev-pm2": "pm2-dev run app.js",
    "prod-pm2": "pm2 start app.js",
    "stop": "pm2 stop app",
    "preinstall": "sudo npm i -g pm2 apidoc gulp",
    "create-doc": "apidoc -f '.*\\.js' -i controllers/ -i venue/ -i user/ -i responses/ -i core/ -i reports/ -i stats/ -o doc/",
    "test": "gulp test-routes --app=stats"
  },
  "dependencies": {
    "bluebird": "^3.0.5",
    "body-parser": "^1.14.1",
    "compression": "^1.6.0",
    "cookie-parser": "^1.4.0",
    "cookie-signature": "^1.0.6",
    "cors": "^2.8.1",
    "credit-card": "^2.0.0",
    "express": "^4.13.3",
    "express-formidable": "^0.1.2",
    "geoip2": "^1.0.5",
    "handlebars": "^4.0.5",
    "helmet": "^2.1.1",
    "html-entities": "^1.2.0",
    "indicative": "^2.1.2",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.8.2",
    "microtime": "^2.1.1",
    "moment": "^2.17.1",
    "moment-timezone": "^0.4.1",
    "mongodb": "^2.1.18",
    "mquery": "^1.11.0",
    "mysql": "^2.9.0",
    "node-uuid": "^1.4.7",
    "nodemailer": "^2.4.0",
    "phantom": "^2.1.21",
    "pm2": "^1.1.3",
    "request": "^2.76.0",
    "request-ip": "^1.2.3",
    "response-time": "^2.3.1",
    "validator": "^4.3.0",
    "vhost": "^3.0.2",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "better-console": "^0.2.4",
    "chai": "^3.4.1",
    "chai-datetime": "^1.4.1",
    "config": "^1.19.0",
    "documentation": "^3.0.4",
    "errorhandler": "^1.4.2",
    "gulp": "^3.9.0",
    "gulp-apidoc": "^0.2.2",
    "gulp-documentation": "^3.1.0",
    "gulp-load-plugins": "^1.1.0",
    "gulp-mocha": "^2.2.0",
    "gulp-nodemon": "^2.0.6",
    "it-each": "^0.3.1",
    "minimist": "^1.2.0",
    "mocha": "^2.3.4",
    "morgan": "^1.6.1",
    "run-sequence": "^1.1.5"
  }
}
